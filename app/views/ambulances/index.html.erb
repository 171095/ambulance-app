<%- model_class = Ambulance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:owner_name) %></th>
      <th><%= model_class.human_attribute_name(:mobile_number) %></th>
      <th><%= model_class.human_attribute_name(:ambulance_number) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:zipcode) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ambulances.each do |ambulance| %>
      <tr>
        <td><%= ambulance.owner_name %></td>
        <td><%= ambulance.mobile_number %></td>
        <td><%= ambulance.ambulance_number %></td>
        <td><%= ambulance.city %></td>
        <td><%= ambulance.zipcode %></td>
        <td><%= ambulance.state %></td>
        <td><%= ambulance.country %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      ambulance_path(ambulance), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ambulance_path(ambulance), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ambulance_path(ambulance),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ambulance_path,
            :class => 'btn btn-primary' %>
