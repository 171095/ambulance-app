<%= form_for @ambulance, :html => { :class => "form-horizontal ambulance" } do |f| %>

  <% if @ambulance.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@ambulance.errors.count, "error") %> prohibited this ambulance from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @ambulance.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :owner_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :owner_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:owner_name) %>
  </div>
  <div class="form-group">
    <%= f.label :mobile_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :mobile_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:mobile_number) %>
  </div>
  <div class="form-group">
    <%= f.label :ambulance_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ambulance_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:ambulance_number) %>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :city, :class => 'form-control' %>
    </div>
    <%=f.error_span(:city) %>
  </div>
  <div class="form-group">
    <%= f.label :zipcode, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :zipcode, :class => 'form-control' %>
    </div>
    <%=f.error_span(:zipcode) %>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :state, :class => 'form-control' %>
    </div>
    <%=f.error_span(:state) %>
  </div>
  <div class="form-group">
    <%= f.label :country, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :country, :class => 'form-control' %>
    </div>
    <%=f.error_span(:country) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ambulances_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
